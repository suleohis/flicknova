# TMDB (The Movie Database)
TMDB_API_KEY=your_tmdb_api_key_here
TMDB_IMAGE_BASE_URL=https://image.tmdb.org/t/p

# Supabase (recommended backend)
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_ANON_KEY=your-anon-public-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here  # only needed for admin tasks / server-side

# X (Twitter) API v2 – App-only Bearer Token (recommended) or OAuth 2.0 Client Credentials
X_BEARER_TOKEN=AAAAAAAAAAAAAAAAAAAAA...your_bearer_token_here
X_CLIENT_ID=your_client_id_here               # optional – only if using OAuth 2.0 flow
X_CLIENT_SECRET=your_client_secret_here       # optional – keep secret!

# Optional: RevenueCat, OpenAI/Grok, etc. for future premium/AI features
REVENUECAT_PUBLIC_KEY=
GROK_API_KEY=

# Debug flags
DEBUG_SHOW_SHIMMER=true
ENABLE_LOGGING=true